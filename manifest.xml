<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>Facebook Theme</name>
	<author>Evan Winslow</author>
	<version>1.8</version>
	<category>theme</category>
	<blurb>Make your site look like facebook!</blurb>
	<description>
		Modifies the layout of Elgg to look very much like facebook.
		Can be extended to add your own color scheme.
	</description>
	<website>https://github.com/ewinslow/elgg-facebook_theme</website>
	<copyright>(C) 2011 Evan Winslow</copyright>
	<license>GNU Public License version 2</license>
	<requires>
		<type>elgg_version</type>
		<version>2011030100</version>
	</requires>
	<suggests>
		<type>plugin</type>
		<name>profile</name>
		<version>1.8</version>
	</suggests>
	<requires>
		<type>priority</type>
		<priority>after</priority>
		<plugin>profile</plugin>
	</requires>
	<requires>
		<type>priority</type>
		<priority>after</priority>
		<plugin>search</plugin>
	</requires>
	<admin_interface>simple</admin_interface>
</plugin_manifest>
